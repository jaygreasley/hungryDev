<h1>Listing resorts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
  </tr>

<% @resorts.each do |resort| %>
  <tr>
    <td><%= resort.name %></td>
    <td><%= resort.country.name %></td>
    <td><%= link_to 'Show',  resort_path(resort) %></td>
    <td><%= link_to 'Edit', edit_resort_path(resort) %></td>
    <td><%= link_to 'Destroy', resort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Resort', new_resort_path %>
